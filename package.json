{
  "name": "thoughts",
  "private": true,
  "type": "module",
  "scripts": {
    "api:build": "pnpm run --filter @thoughts/api build",
    "app:build": "pnpm run --filter @thoughts/app build",
    "api:build:check": "pnpm run --filter @thoughts/api build:check",
    "app:build:check": "pnpm run --filter @thoughts/app build:check",
    "api:dev": "pnpm run --filter @thoughts/api dev",
    "app:dev": "pnpm run --filter @thoughts/app dev",
    "api:lint": "pnpm run --filter @thoughts/api lint",
    "app:lint": "pnpm run --filter @thoughts/app lint",
    "api:format:check": "pnpm run --filter @thoughts/api format:check",
    "app:format:check": "pnpm run --filter @thoughts/app format:check",
    "api:format:write": "pnpm run --filter @thoughts/api format:write",
    "app:format:write": "pnpm run --filter @thoughts/app format:write",
    "prepare": "husky",
    "pre-commit": "lint-staged -c lint-staged.config.js"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
