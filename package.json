{
  "name": "thoughts",
  "private": true,
  "scripts": {
    "build:api": "pnpm run --filter @thoughts/api build",
    "build:app": "pnpm run --filter @thoughts/app build",
    "dev:api": "pnpm run --filter @thoughts/api dev",
    "dev:app": "pnpm run --filter @thoughts/app dev",
    "lint:api": "pnpm run --filter @thoughts/api lint",
    "lint:app": "pnpm run --filter @thoughts/app lint",
    "format:api": "pnpm run --filter @thoughts/api format",
    "format:app": "pnpm run --filter @thoughts/app format",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
